query getSimplifiedFirewallRules($machineId: ID!) {
  getSimplifiedFirewallRules(machineId: $machineId) {
    id
    name
    direction
    action
    port
    protocol
    sourceIp
    destinationIp
    enabled
    description
    origin
  }
}

query getVMFirewallState($machineId: ID!) {
  getVMFirewallState(machineId: $machineId) {
    appliedTemplates
    customRules {
      id
      name
      direction
      action
      port
      protocol
      sourceIp
      destinationIp
      enabled
      description
      origin
    }
    effectiveRules {
      id
      name
      direction
      action
      port
      protocol
      sourceIp
      destinationIp
      enabled
      description
      origin
    }
    lastSync
  }
}

query getAvailableFirewallTemplates {
  getAvailableFirewallTemplates {
    template
    name
    description
    rules {
      port
      protocol
      direction
      action
      description
    }
  }
}